<div class="container" style="margin-top: 50px;">
  {{! Fila 1 }}
  <div class="row">
    <p class="text-end">Hola
      {{usuario}}
      !
      <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesión<i
          class="fa fa-sign-out-alt"
        ></i></a></p>
  </div>
  {{! Fin fila 1 }}
  {{! Fila 2 }}
  <div class="row">
    <div class="col-7">
      <h3>Listado de Novedades</h3>
    </div>
    <div class="col-5 text-end">
      <a href="/admin/novedades/agregar" class="btn btn-success">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Nuevo
      </a>
    </div>
  </div>
  {{! Fin fila 2 }}
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Título</th>
            <th scope="col">Imagen</th>
            <th scope="col" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
            {{#each novedades}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            <td>{{{imagen}}}</td>
            <td class="text-center">
              <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i
                  class="fas fa-pencil-alt"
                ></i></a>
              <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                  class="fa fa-trash"
                ></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>